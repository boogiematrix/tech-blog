<h2>Dashboard</h2>
<div class="row">
    <div class="col">
        {{#each post}}
        <div class="card">
            <div class="card-title d-flex  justify-space-between">
                <div class="row">
                    <div class="col">

                <div class='p-1 w-30'>
                    <a href="/edit/{{id}}">{{title}}</a>
                </div>
                <div class='p-1 text-end w-60'>
                    Posted by {{user.username}} on {{format_date createdAt}}
                </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                
                <div class="">{{content}}</div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>