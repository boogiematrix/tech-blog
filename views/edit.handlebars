<div class="card">
    <div class="card-title">
        <h2>Edit Post</h2>
    </div>
    <form id="edit-post-form" class="card-body">
        
        <div class="form-group">
            <input type="hidden" name="post-id" value="{{post.id}}" />
        </div>
        
        <div class="form-group">
            <label for="post-title">Title</label>
            <input type="text" name="post-title" value="{{post.title}}" class="form-control" />
        </div>

        <div class="form-group">
            <label for="post-body">Content</label>
            <textarea name="post-body" class="form-control">{{post.body}}</textarea>
        </div>

        <button type="submit" class="btn">Update</button>

        <button type="button" id="delete-btn" class="btn">Delete</button>
    
    </form>
</div>

<script src="/js/edit.js"></script>