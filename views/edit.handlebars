<div class="card">
    <div class="card-title p-1">
        <h2>Edit Post</h2>
    </div>
    <form id="edit-post-form" class="card-body">
        
        <div class="form-group">
            <input type="hidden" id="post-id" name="post-id" value="{{post.id}}"/>
        </div>
        
        <div class="form-group">
            <label for="post-title">Title</label>
            <input type="text" name="post-title" value="{{post.title}}" class="form-control" id='post-title'/>
        </div>

        <div class="form-group">
            <label for="post-body">Content</label>
            <textarea name="post-body" class="form-control" id='post-body'>{{post.content}}</textarea>
        </div>

        <button type="submit" class="btn btn-light">Update</button>

        <button type="button" id="delete-btn" class="btn btn-danger">Delete</button>
    
    </form>
</div>

<script src="/js/edit.js"></script>